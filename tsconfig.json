{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM", "WebWorker"],
    "outDir": "dist",

    "moduleResolution": "bundler",
    "noEmit": true,
    "esModuleInterop": true,

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "removeComments": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
